@model DIExample.ViewModels.ProductViewModel
<div id="productForm">
	@Html.AntiForgeryToken()
	@Html.HiddenFor(Model => Model.ProductID)
	<div class="form-group row">
		<div class="col-xs-4">
			@Html.LabelFor(Model => Model.ProductName)
			@Html.TextBoxFor(Model => Model.ProductName, new { @class = "form-control", placeholder = "Product name", required = "required", maxlength="100"})
		</div>
	</div>
	<div class="form-group row">
		<div class="col-xs-4">
			@Html.LabelFor(Model => Model.CategoryName)
			@Html.TextBoxFor(Model => Model.CategoryName, new { @class = "form-control", placeholder = "Category name", required = "required", maxlength = "100" })
		</div>
	</div>
	<div class="form-group row">
		<div class="col-xs-4">
			@Html.LabelFor(Model => Model.Price)
			<div class="input-group">
				<span class="input-group-addon">$</span>
				@Html.TextBoxFor(Model => Model.Price, new { @class = "form-control", type = "number", placeholder = "Price", required = "required", min = "0", max = "99999999" })
			</div>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-xs-4">
			@Html.LabelFor(Model => Model.StockCount)
			@Html.TextBoxFor(Model => Model.StockCount, new { @class = "form-control", type = "number", placeholder = "Amount of stock", required = "required", min = "0", max = "99999" })
		</div>
	</div>
</div>